    echo 'sleep 5' >> /app/start.sh && \
    echo 'echo "ðŸ“Š Application des migrations..."' >> /app/start.sh && \
    echo 'npx prisma migrate deploy' >> /app/start.sh && \
    echo 'echo "ðŸ”‘ GÃ©nÃ©ration du client Prisma..."' >> /app/start.sh && \
    echo 'npx prisma generate' >> /app/start.sh && \
    echo 'echo "ðŸŽ¯ DÃ©marrage du serveur..."' >> /app/start.sh && \
    echo 'exec node dist/main' >> /app/start.sh && \
    chmod +x /app/start.sh

# Start command
CMD ["/app/start.sh"]
