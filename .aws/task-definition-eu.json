{
  "family": "restaurant-saas-backend-eu",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::514183525239:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "restaurant-backend",
      "image": "514183525239.dkr.ecr.eu-north-1.amazonaws.com/restaurant-saas-backend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:Restaurant123!@restaurant-saas-db.c9s4qwou2z1b.eu-north-1.rds.amazonaws.com:5432/postgres"
        },
        {
          "name": "JWT_SECRET",
          "value": "super-secret-jwt-key-for-production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/restaurant-backend-eu",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}




