{
  "family": "restaurant-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::514183525239:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::514183525239:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "restaurant-backend",
      "image": "514183525239.dkr.ecr.us-west-2.amazonaws.com/restaurant-saas-backend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/database-url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/jwt-secret"
        },
        {
          "name": "REDIS_HOST",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/redis-host"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/aws-access-key"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/aws-secret-key"
        },
        {
          "name": "AWS_S3_BUCKET",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/s3-bucket"
        },
        {
          "name": "WAVE_API_URL",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/wave-api-url"
        },
        {
          "name": "WAVE_MERCHANT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/wave-merchant-id"
        },
        {
          "name": "MYNITA_API_URL",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/mynita-api-url"
        },
        {
          "name": "MYNITA_MERCHANT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:514183525239:secret:restaurant/mynita-merchant-id"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/restaurant-backend",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "stopTimeout": 30
    }
  ]
}







